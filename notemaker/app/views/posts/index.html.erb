
<h1 class="current-category"><%= params[:category] %></h1>
<% if @posts.count == 0 %>
  <h3>There are no stories of this category!</h3>
<% else %>
  <div class="transitions-enabled" id="posts">
    <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-3">
        <% if post.image.exists? %>
          <div class="thumbnail">
            <%= link_to (image_tag post.image.url, class: 'image'), post %>
          </div>
        <% else %>
          
            <b>Title:<%= link_to "post.title", post%> 
          
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
 


