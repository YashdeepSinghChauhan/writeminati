<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Snaps don't tell your real story.</h1>
    <p>Writeminati is a story sharing app. Start writing your diary. <b>Remember only one story in a day</b></p>
    <p><%= link_to "Sign Up To Share your Story", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<h1 class="current-category"><%= params[:category] %></h1>
<% if @posts.count == 0 %>
  <h3>There are no posts in this category!</h3>
<% else %>
  <div class="transitions-enabled" id="posts">
    <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag post.image.url, class: 'image'), post %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>