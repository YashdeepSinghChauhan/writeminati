<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Its fast. Just fill it and go.</h1>
      </div>
      <div class="panel-body">
      	<%= form_for(@user, :url => registration_path(resource_name), :validate => true) do |f| %>
				  <%= render 'shared/devisemes' %>

				  <div class="form-group">
            <%= f.email_field :email,  class: "form-control", placeholder: "Your Email Address" %>
          </div>
          <div class="form-group">
            <%= f.file_field :avatar,  class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :username,  class: "form-control", placeholder: "What should we call you " %>
          </div>
				  <div class="form-group">
				  	 <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
				    <%= f.password_field :password, autocomplete: "off", class: "form-control",placeholder: "Password here"  %>
				  </div>
				  <div class="form-group">
				    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Write your password again" %>
				  </div>

				  <div class="form-group">
				  	<%= f.submit "Create", class: "btn" %>
				  </div>
				<% end %>

				<%= render "devise/shared/links" %>
      </div>
		</div>
	</div>
</div>